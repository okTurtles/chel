{
  "imports": {
    "https://deno.land/std/io/util.ts": "https://deno.land/std@0.144.0/io/util.ts"
  },
  "tasks": {
    "lint": "standard ./src",
    "vendor": "deno vendor -f src/main.ts scripts/compile.ts",
    "compile": "deno run --allow-run --allow-read=. --allow-write=./dist scripts/compile.ts",
    "collect": "deno run --allow-read=. --allow-write=. scripts/collect.js",
    "analyze": "deno run --allow-read=. scripts/analyze.js",
    "build": "deno run --allow-run --allow-read --allow-env --allow-write=./build --allow-net scripts/build.ts",
    "dist": "deno lint && deno task build && deno task compile"
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  },
  "lint": {
    "files": {
      "exclude": ["node_modules/", "test/", "vendor/", "dist/", "build/"]
    }
  },
}

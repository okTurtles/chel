{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "moduleResolution": "NodeNext",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@components/*": ["./src/serve/dashboard/views/components/*"],
        "@containers/*": ["./src/serve/dashboard/views/containers/*"],
        "@common/*": ["./src/common/*"],
        "~/*": ["./src/*"]
      },
      "types": ["node"]
    },
    "include": ["./src/**/*", "./scripts/**/*", "./src/**/*.vue", "src/types/vue-shims.d.ts"],
    "exclude": ["node_modules", "vendor/", "dist/", "build/", "test/assets/"]
}
